<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.wind.minstory.base.RefreshAndLoadMoreView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_fragment_main"
        >
        <com.example.wind.minstory.base.LoadMoreListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/load_fragment_main"
            android:clipToPadding="false"
            android:divider="#e5e5e5"
            android:dividerHeight="5dp"
            android:scrollbarStyle="outsideOverlay"
            android:padding="5dp"
            android:background="#e5e5e5"
            android:layoutAnimation="@anim/list_animation"
            >
        </com.example.wind.minstory.base.LoadMoreListView>

    </com.example.wind.minstory.base.RefreshAndLoadMoreView>

</LinearLayout>